{
    "openapi": "3.1.0",
    "info": {
        "title": "XtraSecurity API",
        "version": "1.0.0",
        "description": "The XtraSecurity API allows you to programmatically manage secrets, projects, teams, and notifications. Authenticate using Bearer tokens (API Keys) generated from the dashboard.",
        "contact": {
            "name": "XtraSecurity Support",
            "url": "https://xtrasecurity.dev/support"
        },
        "license": {
            "name": "MIT"
        }
    },
    "servers": [
        {
            "url": "/api",
            "description": "Current server"
        }
    ],
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "API Key from the XtraSecurity dashboard. Pass it as `Authorization: Bearer <token>`."
            }
        },
        "schemas": {
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "Project": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "inactive"
                        ]
                    },
                    "accessControl": {
                        "type": "string",
                        "enum": [
                            "private",
                            "team",
                            "public"
                        ]
                    },
                    "securityLevel": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high"
                        ]
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Branch": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "versionNo": {
                        "type": "string"
                    },
                    "projectId": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Secret": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "version": {
                        "type": "string"
                    },
                    "isReference": {
                        "type": "boolean"
                    },
                    "source": {
                        "type": "string",
                        "enum": [
                            "local",
                            "linked"
                        ]
                    }
                }
            },
            "SecretsMap": {
                "type": "object",
                "additionalProperties": {
                    "type": "string"
                },
                "example": {
                    "DATABASE_URL": "postgres://user:pass@host:5432/db",
                    "API_KEY": "sk-abc123"
                }
            },
            "Team": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "teamColor": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Notification": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "low",
                            "medium",
                            "high",
                            "critical"
                        ]
                    },
                    "type": {
                        "type": "string"
                    },
                    "read": {
                        "type": "boolean"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "NotificationRule": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },
                    "triggers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "channels": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "NotificationChannel": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "slack",
                            "email",
                            "webhook",
                            "teams"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    }
                }
            },
            "AccessRequest": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "reason": {
                        "type": "string"
                    },
                    "duration": {
                        "type": "integer",
                        "description": "Duration in minutes"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "approved",
                            "rejected",
                            "expired",
                            "revoked"
                        ]
                    },
                    "requestedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "AuditLog": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "action": {
                        "type": "string"
                    },
                    "entity": {
                        "type": "string"
                    },
                    "entityId": {
                        "type": "string"
                    },
                    "changes": {
                        "type": "object"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Authentication and session management"
        },
        {
            "name": "Projects",
            "description": "Manage projects and their settings"
        },
        {
            "name": "Secrets",
            "description": "Read and write environment secrets"
        },
        {
            "name": "Branches",
            "description": "Manage secret branches"
        },
        {
            "name": "Teams",
            "description": "Manage teams and memberships"
        },
        {
            "name": "Notifications",
            "description": "Alerts, rules, and channels"
        },
        {
            "name": "Access",
            "description": "JIT access requests and break-glass"
        },
        {
            "name": "Audit",
            "description": "Immutable audit logs"
        }
    ],
    "paths": {
        "/projects": {
            "get": {
                "tags": [
                    "Projects"
                ],
                "summary": "List all projects",
                "description": "Returns all projects the authenticated user has access to.",
                "operationId": "listProjects",
                "responses": {
                    "200": {
                        "description": "A list of projects",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Project"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Projects"
                ],
                "summary": "Create a new project",
                "operationId": "createProject",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "workspaceId"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "my-backend"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Production backend project"
                                    },
                                    "workspaceId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Project created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/projects/{projectId}/envs/{env}/secrets": {
            "get": {
                "tags": [
                    "Secrets"
                ],
                "summary": "Get all secrets for an environment",
                "description": "Returns all decrypted key-value pairs for the given project and environment. Requires `secret.read` permission.",
                "operationId": "getSecrets",
                "parameters": [
                    {
                        "name": "projectId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The project ID"
                    },
                    {
                        "name": "env",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "development",
                                "staging",
                                "production"
                            ]
                        },
                        "description": "The environment"
                    },
                    {
                        "name": "branch",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "default": "main"
                        },
                        "description": "The branch to read from"
                    },
                    {
                        "name": "includeVersions",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": "Include version metadata for each secret"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Key-value map of secrets",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SecretsMap"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Access Denied or JIT Elevation Required"
                    },
                    "404": {
                        "description": "Project or Branch not found"
                    }
                }
            },
            "post": {
                "tags": [
                    "Secrets"
                ],
                "summary": "Create or update secrets",
                "description": "Bulk upsert secrets. Provide a key-value map. Supports optimistic locking via `expectedVersions`.",
                "operationId": "upsertSecrets",
                "parameters": [
                    {
                        "name": "projectId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "env",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "development",
                                "staging",
                                "production"
                            ]
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "secrets": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "type": "string"
                                        },
                                        "example": {
                                            "DATABASE_URL": "postgres://...",
                                            "API_KEY": "sk-..."
                                        }
                                    },
                                    "branch": {
                                        "type": "string",
                                        "default": "main"
                                    },
                                    "expectedVersions": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "type": "string"
                                        },
                                        "description": "For optimistic locking. Map of key to expected current version."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Secrets upserted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "count": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Project or Branch not found"
                    },
                    "409": {
                        "description": "Version conflict detected",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        },
                                        "conflicts": {
                                            "type": "array"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/branch": {
            "get": {
                "tags": [
                    "Branches"
                ],
                "summary": "List branches for a project",
                "operationId": "listBranches",
                "parameters": [
                    {
                        "name": "projectId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of branches",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Branch"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            },
            "post": {
                "tags": [
                    "Branches"
                ],
                "summary": "Create a new branch",
                "operationId": "createBranch",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "projectId"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "feature/new-api"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "projectId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Branch created"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/team": {
            "get": {
                "tags": [
                    "Teams"
                ],
                "summary": "List all teams",
                "operationId": "listTeams",
                "responses": {
                    "200": {
                        "description": "List of teams",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Team"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            },
            "post": {
                "tags": [
                    "Teams"
                ],
                "summary": "Create a new team",
                "operationId": "createTeam",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "teamColor": {
                                        "type": "string",
                                        "example": "#4F46E5"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Team created"
                    }
                }
            }
        },
        "/notifications": {
            "get": {
                "tags": [
                    "Notifications"
                ],
                "summary": "List all alert notifications",
                "operationId": "listNotifications",
                "responses": {
                    "200": {
                        "description": "List of notifications",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Notification"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/notification-rules": {
            "get": {
                "tags": [
                    "Notifications"
                ],
                "summary": "List notification rules",
                "operationId": "listNotificationRules",
                "responses": {
                    "200": {
                        "description": "List of rules",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/NotificationRule"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Create a notification rule",
                "operationId": "createNotificationRule",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "triggers",
                                    "channels"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "triggers": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "secret.rotate",
                                            "secret.access"
                                        ]
                                    },
                                    "channels": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "conditions": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Rule created"
                    }
                }
            }
        },
        "/notification-channels": {
            "get": {
                "tags": [
                    "Notifications"
                ],
                "summary": "List notification channels",
                "operationId": "listNotificationChannels",
                "responses": {
                    "200": {
                        "description": "List of channels",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/NotificationChannel"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Create a notification channel",
                "operationId": "createNotificationChannel",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "type",
                                    "name",
                                    "config"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "slack",
                                            "email",
                                            "webhook",
                                            "teams"
                                        ]
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Slack - Security Alerts"
                                    },
                                    "config": {
                                        "type": "object",
                                        "description": "Channel-specific config. For Slack: `{ webhookUrl }`. For email: `{ email }`. For webhook: `{ url }`."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Channel created"
                    }
                }
            }
        },
        "/access-requests": {
            "get": {
                "tags": [
                    "Access"
                ],
                "summary": "List JIT access requests",
                "operationId": "listAccessRequests",
                "responses": {
                    "200": {
                        "description": "List of access requests",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AccessRequest"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Access"
                ],
                "summary": "Submit a JIT access request",
                "operationId": "createAccessRequest",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "reason",
                                    "duration"
                                ],
                                "properties": {
                                    "reason": {
                                        "type": "string",
                                        "example": "Debugging production issue #1234"
                                    },
                                    "duration": {
                                        "type": "integer",
                                        "example": 60,
                                        "description": "Duration in minutes"
                                    },
                                    "secretId": {
                                        "type": "string"
                                    },
                                    "projectId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Request submitted"
                    }
                }
            }
        },
        "/audit": {
            "get": {
                "tags": [
                    "Audit"
                ],
                "summary": "Get audit logs",
                "operationId": "getAuditLogs",
                "parameters": [
                    {
                        "name": "workspaceId",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 50
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of audit logs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/AuditLog"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden - Admin only"
                    }
                }
            }
        }
    }
}